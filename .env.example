# Application Settings
ENVIRONMENT=development
DEBUG=true

# AI Provider (openai, qianwen, wenxin)
AI_PROVIDER=qianwen

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=

# Qianwen (Aliyun DashScope) Configuration
QIANWEN_API_KEY=sk-your-qianwen-api-key
QIANWEN_MODEL=glm-4.7

# Wenxin (Baidu) Configuration
WENXIN_API_KEY=your-wenxin-api-key
WENXIN_SECRET_KEY=your-wenxin-secret-key
WENXIN_MODEL=ernie-bot-4

# Database
DATABASE_URL=sqlite:///./data/database/aigf.db
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# WeChat
WECHAT_HOT_RELOAD=true

# Memory Settings
SHORT_TERM_MEMORY_LIMIT=20
LONG_TERM_MEMORY_THRESHOLD=0.7
MEMORY_CONSOLIDATION_INTERVAL=3600

# Conversation Settings
MAX_CONTEXT_MESSAGES=10
RESPONSE_TIMEOUT=30.0

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_MINUTE=30
RATE_LIMIT_MESSAGES_PER_HOUR=200

# Security
CONTENT_FILTER_ENABLED=true
MAX_MESSAGE_LENGTH=2000

# Scheduler (Proactive Messages)
MORNING_GREETING_HOUR=8
NOON_GREETING_HOUR=12
AFTERNOON_NAP_HOUR=14
DINNER_GREETING_HOUR=18
NIGHT_GREETING_HOUR=22

# Logging
LOG_LEVEL=INFO

# RAG / Vector Store
RAG_BACKEND=qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION=dialogues
